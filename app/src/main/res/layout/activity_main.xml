<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">
    <Button

            android:layout_width="250dp"
            android:layout_height="60dp"
            android:id="@+id/btn_localizar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Guardar"
            android:background="@drawable/custom_button"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="false" app:layout_constraintHorizontal_bias="0.484" android:layout_marginBottom="96dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtInputID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="Introduce tu ID"
            app:layout_constraintHorizontal_bias="0.506" android:layout_marginTop="112dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtInputNombre" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txtInputID"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="Introduce tu Nombre"
            app:layout_constraintHorizontal_bias="0.512"/>
    <EditText
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtInputPuesto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="Introduce tu Puesto"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/txtInputNombre" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_localizar" app:layout_constraintVertical_bias="0.047"/>
</android.support.constraint.ConstraintLayout>